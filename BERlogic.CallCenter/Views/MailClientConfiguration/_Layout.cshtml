@inject IViewLocalizer Localizer
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-md-9 panel panel-body panel-default">
            <h2>@Localizer["Manage your Mail Client Folders"]</h2>
            <hr/>
            @if (TempData["message"] != null) {
                <div class="alert alert-success">@TempData["message"]</div>
            }
            @if (TempData["testConnection"] != null) {
                <div class="alert alert-success">@TempData["testConnection"]</div>
            }
            @if (TempData["testError"] != null) {
                <div class="alert alert-danger">@Html.Raw(TempData["testError"])</div>
            }
            @RenderBody()
        </div>
        <div class="col-md-3 panel panel-body panel-darken">
            <h2>@Localizer["List of Folders"]</h2>
            <hr/>
            @await Component.InvokeAsync("MailClientList")
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
