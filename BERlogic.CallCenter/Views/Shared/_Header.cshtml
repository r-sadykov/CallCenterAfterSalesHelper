    </div>

    <!-- notification content -->
                <div class="ajax-notifications custom-scroll">

                    <div class="alert alert-transparent">
                        <h4>@Localizer["Click a button to show messages here"]</h4>
                        @Localizer["This blank page message helps protect your privacy, or you can show the first message here automatically."]
                    </div>

                    <i class="fa fa-lock fa-4x fa-border"></i>

                </div>
                <!-- end notification content -->
                <!-- footer: refresh area -->
                <span>
                    @Localizer["Last updated on:"] @DateTime.Now
