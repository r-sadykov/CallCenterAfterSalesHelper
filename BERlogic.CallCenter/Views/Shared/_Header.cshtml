    <!-- multiple lang dropdown : find all flags in the flags page -->    

    @{

            var requestCulture = Context.Features.Get<IRequestCultureFeature>();

            var cultureItems = LocOptions.Value.SupportedUICultures

                .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })

                .ToList();
        }

    <div title="@Localizer["Request culture provider:"] @requestCulture?.Provider?.GetType().Name" class="header-dropdown-list hidden-xs">
        <form id="selectLanguage"
              method="post" class="form-horizontal" role="form">
            <ul class="header-dropdown-list hidden-xs">
                <li>
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @{

                                string cult = requestCulture.RequestCulture.UICulture.Name.ToLower().Substring(3);

                                string name = requestCulture.RequestCulture.UICulture.NativeName;

                                string cssFlag = "flag flag-" + cult;
                            }
                        <img src="~/img/blank.gif" class="@cssFlag" alt="United States"> <span> @name </span> <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu pull-left left" id="languages" style="width: 200px">
                            @for (int i = 0; i < LocOptions.Value.SupportedUICultures.Count; i++)

                            {

                                string cultRequest = LocOptions.Value.SupportedUICultures[i].Name.ToLower().Substring(3);

                                string cssFlags = "flag flag-" + cultRequest;

                                string nameCult = LocOptions.Value.SupportedUICultures[i].EnglishName;

                                string displayName = LocOptions.Value.SupportedUICultures[i].NativeName;

                                    <li class="pull-left">
                                        <button type="submit" class="transparent btn-link pull-left text-align-left align-text-top text-justify" asp-controller="Home" asp-action="SetLanguage" asp-route-culture="@LocOptions.Value.SupportedUICultures[i].Name" asp-route-returnUrl="@Context.Request.Path" style="width: auto"><img src="~/img/blank.gif" class="@cssFlags pull-left" alt="@nameCult" style="margin-right: 5px; margin-top:5px"><span>@displayName</span></button>
                                    </li>

                            }
                    </ul>
                </li>
            </ul>
        </form>
    </div>



