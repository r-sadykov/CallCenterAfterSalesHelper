@model IEnumerable<BERlogic.CallCenter.Models.MailServerConfiguration>
@inject IViewLocalizer Localizer

<div class="panel" >
        @foreach (var db in Model)
        {
            <input type="hidden" value="@db.ConfigurationId" />
            <table class="table table-condensed">
                <thead>
                <tr class="font-weight-bold font-lg">
                    <td colspan="3">@db.ConfigurationName</td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>@Localizer["Component.DatabaseConfiguration.Address"]</td>
                    <td colspan="2">@db.Address</td>
                </tr>
                <tr>
                    <td>@Localizer["Component.DatabaseConfiguration.User"]</td>
                    <td colspan="2">@db.UserName</td>
                </tr>
                <tr>
                    <td></td>
                    <td><a asp-controller="MailServerConfiguration" asp-action="EditMailServerConfiguration" asp-route-configurationId="@db.ConfigurationId"><u>@Localizer["Component.DatabaseConfiguration.E"]</u>@Localizer["Component.DatabaseConfiguration.Dit"]</a></td>
                    <td><a asp-controller="MailServerConfiguration" asp-action="RemoveMailServerConfiguration" asp-route-configurationId="@db.ConfigurationId"><u>@Localizer["Component.DatabaseConfiguration.R"]</u>@Localizer["Component.DatabaseConfiguration.Emove"]</a></td>
                </tr>
                </tbody>
            </table>
        }
</div>