@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />

    <title>@Localizer["test CallCenter Web Application"]</title>
    <meta name="description" content="test CallCenter Web Application" />
    <meta name="author" content="RSS" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Basic Styles -->
    @{
        await Html.RenderPartialAsync("_StylesheetsPartial"); 
    }

    <!-- FAVICONS -->
    <link rel="shortcut icon" href="~/img/favicon/favicon_ber.ico" type="image/x-icon" />
    <link rel="icon" href="~/img/favicon/favicon_ber.ico" type="image/x-icon" />

    <!-- GOOGLE FONT -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700" />
</head>
<body>
    @{
        await Html.RenderPartialAsync("_Header"); 
    }
    @{
        await Html.RenderPartialAsync("_Navigation"); 
    }
    <!-- MAIN PANEL -->
    <div id="main" role="main">
        @* @{ await Html.RenderPartialAsync("_Ribbon"); } *@
        <!-- MAIN CONTENT -->
        <div id="content" style="overflow: auto">
            @RenderBody()
        </div>
        <!-- END MAIN CONTENT -->
    </div>
    <!-- END MAIN PANEL -->
    @{
        await Html.RenderPartialAsync("_Footer"); 
    }
    @* @{ await Html.RenderPartialAsync("_Shortcuts"); } *@
    @{
        await Html.RenderPartialAsync("_Scripts"); 
    }
    <environment include="Development">
        <!-- PACE LOADER - turn this on if you want ajax loading to show (caution: uses lots of memory on iDevices)-->
        <script data-pace-options='{ "restartOnRequestAfter": true }' src="~/js/plugin/pace/pace.js"></script>
    </environment>
    <environment exclude="Development">
        <!-- PACE LOADER - turn this on if you want ajax loading to show (caution: uses lots of memory on iDevices)-->
        <script data-pace-options='{ "restartOnRequestAfter": true }' src="~/js/plugin/pace/pace.min.js"></script>
    </environment>
    <script>
        $(function () {
            // DO NOT REMOVE : GLOBAL FUNCTIONS!
            pageSetUp();
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
